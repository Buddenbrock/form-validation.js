<form class="form validate">
    {{#> sections/form-row}}{{#*inline "content"}}

        <!-- Input without validation -->
        {{> form/field-input id="1" type="text"}}

        <!-- Input with validation rule required -->
        {{> form/field-input id="2" type="text" rule="required"}}

    {{/inline}}{{/sections/form-row}}

    {{#> sections/form-row}}{{#*inline "content"}}

