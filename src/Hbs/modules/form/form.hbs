<form class="form validate">

    <div class="form-row">
        <!-- Input without validation -->
        {{> form/input id="1" type="text"}}

        <!-- Input with validation rule required -->
        {{> form/input id="2" type="text" rule="required"}}
    </div>

    <div class="form-row">
        <!-- Input -> minlen -->
        {{> form/input id="3" type="text" rule="minlen:5"}}

        <!-- Input -> phone -->
        {{> form/input id="4" type="tel" rule="phone"}}
    </div>

    <div class="form-row">
        <!-- Input -> email -->
        {{> form/input id="5" type="email" rule="email"}}

        <!-- Input -> email verification -->
        {{> form/input id="6" type="email" rule="email-verify"}}
        <!-- missing validation -->
    </div>

    <div class="form-row">
        <!-- Input -> checkbox -->
        {{> form/checkbox id="7"}}

    </div>

    <div class="form-row">
        <!-- Input -> checkbox group -->
        {{> form/checkbox-group id="8"}}

        <!-- Input -> radiobox -->
        {{> form/radio-group id="9"}}
    </div>

    <div class="form-row">
        <!-- Select -->
        {{> form/select id="10"}}
    </div>

    <div class="form-row">
        <!-- Input -> regExp -->
        {{> form/input id="11" type="email" rule="regExp:/[^a-zA-Z]+/gm"}}
    </div>

    <div class="form-row">
        <!-- Textarea -->
        {{> form/textarea id="11" rule="required"}}
    </div>

