    {{#> sections/form-row}}{{#*inline "content"}}

        <!-- Input -> regExp -->
        {{> form/field-input id="11" type="email" rule="regExp:/[^a-zA-Z]+/gm"}}

    {{/inline}}{{/sections/form-row}}

    {{#> sections/form-row}}{{#*inline "content"}}

